<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_margin="10dp"
    app:cardElevation="5dp"
    app:cardBackgroundColor="@color/dark_blue_2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/idTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:layout_toLeftOf="@id/idDelete"
            android:padding="5dp"
            android:text="@string/title"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/idDesc"
            android:layout_width="315dp"
            android:layout_height="44dp"
            android:layout_below="@id/idTitle"
            android:layout_alignParentStart="true"
            android:layout_marginStart="4dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="5dp"
            android:layout_toStartOf="@+id/idDelete"
            android:layout_toLeftOf="@id/idDelete"
            android:padding="5dp"
            android:text="@string/desc"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/idTime"
            android:layout_width="267dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/idTitle"
            android:layout_alignParentStart="true"
            android:layout_marginStart="2dp"
            android:layout_marginTop="59dp"
            android:layout_marginEnd="51dp"
            android:layout_marginRight="51dp"
            android:layout_marginBottom="5dp"
            android:layout_toStartOf="@+id/idDelete"
            android:layout_toLeftOf="@id/idDelete"
            android:padding="10dp"
            android:text="@string/time"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/idDelete"
            android:layout_width="56dp"
            android:layout_height="101dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="5dp"

            android:layout_marginTop="25dp"
            android:layout_marginEnd="10dp"
            android:gravity="bottom"
            android:padding="10dp"
            android:src="@drawable/ic_baseline_auto_delete_24" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>